<div class='row'>

  <div class="col-sm-offset-1 col-sm-10">
    
    <%= form_for @post, html: {id: 'form-post', class: 'form-horizontal', role: 'form'} do |f| %>

      <%= hidden_field_tag :page, params[:page] %>

      <%= render "shared/error_messages", target: @post %>

      <div class="form-group">
        <%= f.label :title, class: 'col-sm-1 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :title, class: 'form-control', required: true, placeholder: 'Title' %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-12 col-lg-12">
          <%= f.text_area :body, class: 'form-control', rows: '20' %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-12 text-center">
          <%= f.submit class: "btn btn-primary btn-sm" %>
          <%= link_to 'Back', posts_path, class: 'btn btn-default btn-sm' %>
        </div>
      </div>
      
    <% end %>

  </div>

</div>