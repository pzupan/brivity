<div class='col-sm-12'>
  <span><%= comment.user.full_name %> - <%= comment.created_at.to_s(:humanized_ago) %></span>
  
  <div class='pull-right'>
    <% if user_signed_in? %>
      <% if can?(:edit, comment) %>
        <%= link_to 'Edit', edit_comment_path(comment), remote: true %>
        <%= link_to 'Delete', comment_path(comment), method: :delete, remote: true, data: {confirm: 'Are you sure you want to delete this comment?'} %>
      <% end %>
    <% end %>
  </div>

</div>

<div class='col-sm-12'>

  <div class='col-sm-11'>
    <span><%= comment.body %></span>
  </div>
  
</div>